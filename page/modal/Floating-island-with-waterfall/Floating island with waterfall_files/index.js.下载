$(window).on("load",function(){$(window).on("resize",function(a){redrawElements()});redrawElements()});function redrawElements(b){var e=$("#islandContainer img.island").width();var c=$("#islandContainer img.island").height();var d=$("#islandContainer img.island").offset().left-$("#islandContainer").offset().left;$("#islandInsideContainer").css("width",e+"px");$("#islandInsideContainer").css("height",c+"px");$("#islandInsideContainer").css("left",d+"px");var a=$("#islandInsideContainer").width();bigCloudWidth=a*40/100;smallCloudWidth=a*20/100;$(".cloudBig").css("width",bigCloudWidth+"px");$(".cloudSmall").css("width",smallCloudWidth+"px")};